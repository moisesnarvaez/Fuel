<%= form_for(@car, :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
  <legend></legend>

  <div class="control-group">
    <%= f.label :mark, :class => "control-label" %>
    <div class="controls"><%= f.text_field :mark, :class => "input-xlarge" %></div>
  </div>

  <div class="control-group">
    <%= f.label :model, :class => "control-label" %>
    <div class="controls"><%= f.text_field :model, :class => "input-xlarge" %></div>
  </div>

  <div class="control-group">
    <%= f.label :year, :class => "control-label" %>
    <div class="controls"><%= f.text_field :year, :class => "input-xlarge" %></div>
  </div>

  <div class="control-group">
    <%= f.label :color, :class => "control-label" %>
    <div class="controls"><%= f.text_field :color, :class => "input-xlarge" %></div>
  </div>

  <% if @car.errors.any? %>
    <div class="alert alert-block" id="alert">
      <a class="close" data-dismiss="alert">x</a>
      <h4 class="alert-heading">Warning!</h4>
      Please check the following <%= pluralize(@car.errors.count, "message") %>:
      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to "Cancel", cars_path, :class => "btn" %>
  </div>
  </fieldset>
<% end %>